# 开发环境配置
DEBUG=true
ENVIRONMENT=development

# 服务配置
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# 日志配置
LOG_LEVEL=debug
LOG_FORMAT=detailed
ACCESS_LOG=true

# 数据库配置
DATABASE_URL=sqlite:///./xiaoyao_search_dev.db
DATABASE_ECHO=false

# API 配置
API_V1_STR=/api/v1
API_RATE_LIMIT="100/minute"
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# 文件处理配置
MAX_UPLOAD_SIZE=100MB
ALLOWED_FILE_EXTENSIONS=["txt","pdf","docx","xlsx","pptx","jpg","png","gif","mp3","mp4","wav","md","py","js","ts","json","xml","csv","html","css"]

# 搜索配置
SEARCH_BATCH_SIZE=50
SEARCH_MAX_RESULTS=100
ENABLE_FUZZY_SEARCH=true
ENABLE_SEMANTIC_SEARCH=true

# 安全配置
SECRET_KEY="dev-secret-key-change-in-production"
ALLOWED_HOSTS=["localhost","127.0.0.1","0.0.0.0"]
ENABLE_CORS=true

# 开发工具配置
ENABLE_PROFILER=true
ENABLE_API_DOCS=true
API_DOCS_URL="/docs"
ENABLE_RELOAD=true