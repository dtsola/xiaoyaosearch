# XiaoyaoSearch Backend Environment Configuration

# Project Settings
PROJECT_NAME=XiaoyaoSearch
PROJECT_DESCRIPTION=AI-driven desktop search application
VERSION=0.1.0

# API Configuration
API_V1_STR=/api/v1
HOST=127.0.0.1
PORT=8000
DEBUG=false

# CORS Settings
ALLOWED_HOSTS=["*"]

# Database Settings
DATABASE_URL=sqlite+aiosqlite:///./xiaoyaosearch.db

# Security Settings
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Storage Settings
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# AI Model Settings
AI_MODEL_DIR=./ai-models
OLLAMA_URL=http://localhost:11434
OPENAI_API_KEY=your-openai-api-key-here

# LLM Query Understanding Settings
LLM_PROVIDER=mock
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=500
LLM_TIMEOUT=30
QUERY_UNDERSTANDING_ENABLED=true
QUERY_ANALYZE_INTENT=true
QUERY_EXTRACT_KEYWORDS=true
QUERY_PARSE_TIME=true
QUERY_EXPAND_QUERY=true

# AI Service Performance Settings
AI_CONCURRENT_REQUESTS=3
AI_RATE_LIMIT_REQUESTS=60
AI_RATE_LIMIT_PERIOD=60

# Vector Search Settings
VECTOR_INDEX_PATH=./data/vector_index.faiss
FULLTEXT_INDEX_PATH=./data/fulltext_index

# File Scanning Settings
WATCH_DIRECTORIES=[]
EXCLUDE_PATTERNS=["*.tmp", "*.log", "*.cache", ".git", "__pycache__", "node_modules", ".vscode", ".idea"]

# Performance Settings
# CPU核心数（用于并行处理）
MAX_WORKERS=4

# 内存缓存大小（MB）
CACHE_SIZE_MB=512

# 批处理大小
BATCH_SIZE=100

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 打包配置
DEVELOPMENT=False