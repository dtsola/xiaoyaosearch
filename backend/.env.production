# 生产环境配置
DEBUG=false
ENVIRONMENT=production

# 服务配置
HOST=127.0.0.1
PORT=8000
WORKERS=4
RELOAD=false

# 日志配置
LOG_LEVEL=warn
LOG_FORMAT=json
ACCESS_LOG=false

# 数据库配置
DATABASE_URL=sqlite:///./xiaoyao_search.db
DATABASE_ECHO=false

# API 配置
API_V1_STR=/api/v1
API_RATE_LIMIT="1000/minute"
CORS_ORIGINS=["app://localhost"]

# 文件处理配置
MAX_UPLOAD_SIZE=200MB
ALLOWED_FILE_EXTENSIONS=["txt","pdf","docx","xlsx","pptx","jpg","jpeg","png","gif","bmp","mp3","mp4","wav","avi","mov","mkv","md","py","js","ts","json","xml","csv","html","css","scss","less","yaml","yml","ini","cfg","conf","log","rtf","odt","ods","odp","zip","rar","7z","tar","gz","bz2","xz","dockerfile","makefile","readme","changelog","license","gitignore","env"]

# 搜索配置
SEARCH_BATCH_SIZE=100
SEARCH_MAX_RESULTS=200
ENABLE_FUZZY_SEARCH=true
ENABLE_SEMANTIC_SEARCH=true
SEARCH_CACHE_TTL=3600

# 安全配置
SECRET_KEY="${RANDOM_SECRET_KEY}"  # 需要在实际部署时替换
ALLOWED_HOSTS=["127.0.0.1","localhost","app://localhost"]
ENABLE_CORS=false
ENABLE_CSP=true

# 性能配置
ENABLE_PROFILER=false
ENABLE_API_DOCS=false
ENABLE_PERFORMANCE_MONITOR=false
ENABLE_METRICS=false

# 缓存配置
ENABLE_RESPONSE_CACHING=true
CACHE_TTL=300
MAX_CACHE_SIZE=1000

# 限制配置
MAX_CONCURRENT_REQUESTS=10
MAX_FILE_INDEX_SIZE=10000
MAX_SEARCH_CONCURRENT=5

# 监控配置
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH="/health"
METRICS_PATH="/metrics"