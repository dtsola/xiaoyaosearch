# 测试环境配置
DEBUG=false
ENVIRONMENT=test

# 服务配置
HOST=127.0.0.1
PORT=8000
WORKERS=2
RELOAD=false

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=simple
ACCESS_LOG=true

# 数据库配置
DATABASE_URL=sqlite:///./xiaoyao_search_test.db
DATABASE_ECHO=false

# API 配置
API_V1_STR=/api/v1
API_RATE_LIMIT="200/minute"
CORS_ORIGINS=["*"]

# 文件处理配置
MAX_UPLOAD_SIZE=50MB
ALLOWED_FILE_EXTENSIONS=["txt","pdf","docx","xlsx","pptx","jpg","png","gif","mp3","mp4","wav","md","py","js","ts","json","xml","csv","html","css"]

# 搜索配置
SEARCH_BATCH_SIZE=30
SEARCH_MAX_RESULTS=50
ENABLE_FUZZY_SEARCH=true
ENABLE_SEMANTIC_SEARCH=true

# 安全配置
SECRET_KEY="test-secret-key-change-in-production"
ALLOWED_HOSTS=["127.0.0.1","localhost"]
ENABLE_CORS=true

# 测试配置
ENABLE_PROFILER=false
ENABLE_API_DOCS=true
API_DOCS_URL="/docs"
TEST_DATA_PATH="./test_data"
AUTO_CREATE_TEST_DATA=true

# 性能配置
ENABLE_PERFORMANCE_MONITOR=true
ENABLE_METRICS=true