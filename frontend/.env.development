# 开发环境配置
NODE_ENV=development
VITE_NODE_ENV=development

# API 配置
VITE_API_BASE_URL=http://localhost:8000
VITE_API_TIMEOUT=30000

# 应用配置
VITE_APP_TITLE=小遥搜索 - 开发版
VITE_LOG_LEVEL=debug
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_HOT_RELOAD=true

